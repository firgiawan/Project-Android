<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tamaka.sharedpreferences.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLay2">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/iconpark"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:text="Selamat Datang di Aplikasi Parkir"
                android:id="@+id/tx_greet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/tx_greet"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:hint="Username"
                android:textStyle="italic"
                android:id="@+id/tx_username"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLay3"
        android:layout_below="@id/linearLay2"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/btnparkir"
                android:background="@drawable/parklogo"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/textparking"
                android:text="Parkir"
                android:layout_below="@id/btnparkir"
                android:gravity="center"
                android:textColor="@color/colorBlack"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/btnmobil"
                android:layout_toRightOf="@id/btnparkir"
                android:background="@drawable/carlogo"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/textmobil"
                android:text="Mobil"
                android:layout_below="@id/btnmobil"
                android:layout_toRightOf="@+id/textparking"
                android:gravity="center"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLay3"
        android:id="@+id/linearLay4"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout2">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/locationlogo"
                android:id="@+id/btnlokasi"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/textlokasi"
                android:layout_below="@id/btnlokasi"
                android:textColor="@color/colorBlack"
                android:text="Lokasi"
                android:gravity="center"
                android:textSize="15dp"/>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/exitlogo"
                android:layout_toRightOf="@id/btnlokasi"
                android:id="@+id/btnexit"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/textexit"
                android:layout_below="@id/btnlokasi"
                android:layout_toRightOf="@id/textlokasi"
                android:gravity="center"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
