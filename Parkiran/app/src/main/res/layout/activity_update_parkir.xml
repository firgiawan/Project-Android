<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tamaka.sharedpreferences.UpdateParkir">

    <EditText
        android:id="@+id/nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txnomor"
        android:layout_below="@+id/txnomor"
        android:inputType="number"
        android:maxLength="10">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txnomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Nomor" />

    <TextView
        android:id="@+id/txnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomor"
        android:layout_below="@+id/nomor"
        android:layout_marginTop="10dp"
        android:text="Nama Mobil" />

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txnama"
        android:layout_below="@+id/txnama"
        android:inputType="text"
        android:maxLength="20"/>

    <TextView
        android:id="@+id/txtjenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nama"
        android:layout_below="@+id/nama"
        android:layout_marginTop="10dp"
        android:text="Jenis Mobil" />

    <EditText
        android:id="@+id/jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtjenis"
        android:layout_below="@+id/txtjenis"
        android:inputType="text"/>

    <TextView
        android:id="@+id/txtplat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jenis"
        android:layout_below="@+id/jenis"
        android:layout_marginTop="10dp"
        android:text="Plat Kendaraan" />

    <EditText
        android:id="@+id/plat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtplat"
        android:layout_below="@+id/txtplat"
        android:inputType="text"
        android:hint="AG 1 AG"/>

    <TextView
        android:id="@+id/txtjm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plat"
        android:layout_below="@+id/plat"
        android:layout_marginTop="10dp"
        android:text="Jam Masuk" />

    <EditText
        android:id="@+id/jam_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtjm"
        android:layout_below="@+id/txtjm"
        android:maxLength="100"
        android:inputType="text"/>

    <TextView
        android:id="@+id/txtjk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jam_masuk"
        android:layout_below="@+id/jam_masuk"
        android:layout_marginTop="10dp"
        android:text="Jam Keluar" />

    <EditText
        android:id="@+id/jam_keluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtjk"
        android:layout_below="@+id/txtjk"
        android:maxLength="100"
        android:inputType="text"/>

    <TextView
        android:id="@+id/txtlokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jam_keluar"
        android:layout_below="@+id/jam_keluar"
        android:layout_marginTop="10dp"
        android:text="Jam Masuk" />

    <EditText
        android:id="@+id/lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtlokasi"
        android:layout_below="@+id/txtlokasi"
        android:maxLength="100"
        android:inputType="text"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lokasi"
        android:layout_alignParentBottom="true"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/updatebt"
        android:text="Update" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/backbt"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lokasi"
        android:layout_alignEnd="@+id/lokasi" />

</RelativeLayout>
